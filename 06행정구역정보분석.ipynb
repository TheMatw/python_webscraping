#%%

def get_pop_max_city(sido_name):
    pop_max_value = data.loc[data['광역시도'] == sido_name,'인구수'].max()
    return data.loc[(data['광역시도'] == sido_name) & (data['인구수'] == pop_max_value),['광역시도','행정구역','인구수']]

